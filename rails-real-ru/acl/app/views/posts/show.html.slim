= content_for :title do
  = @post.title
p
  strong.me-2 = t('.author')
  = @post.author.name
p
  strong.me-2 = t('.body')
  = @post.body

hr

.d-flex
  / BEGIN
  - if policy(@post).edit?
    = link_to t('edit'), edit_post_path(@post), class: 'btn btn-outline-warning m-2'
  -if policy(@post).destroy?
    = link_to t('destroy'), @post, data: { turbo_method: :delete, turbo_confirm: t('destroy_confirmation') }, class: 'btn btn-outline-danger m-2'
  / END
  = link_to t('back'), :back, class: 'btn btn-outline-primary m-2'
